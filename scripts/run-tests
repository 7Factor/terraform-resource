#!/bin/bash

set -eux -o pipefail

release_dir="$( cd "$( dirname "$0" )" && cd .. && pwd )"
src_dir="$( cd "${release_dir}/src/terraform-resource/" && pwd )"

source "${release_dir}/.envrc"

pushd "${src_dir}" > /dev/null
  glide install
  ginkgo \
    -r \
    -skipPackage vendor/ \
    -randomizeAllSpecs \
    -randomizeSuites \
    "$@"
popd > /dev/null
