#!/bin/bash

set -eu -o pipefail

release_dir="$( cd "$( dirname "$0" )" && cd ../.. && pwd )"
workspace_dir="$( cd "${release_dir}" && cd .. && pwd )"

# outputs
output_dir="${workspace_dir}/build-artifacts"

TARGETARCH="amd64" ./ci/tasks/build-custom-artifacts "${output_dir}/amd64"
TARGETARCH="arm64" ./ci/tasks/build-custom-artifacts "${output_dir}/arm64"
cp "${workspace_dir}/docker-prod/Dockerfile" "${output_dir}/"
